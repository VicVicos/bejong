@import 'var.styl'
html, body
    font-family: 'Open Sans', Arial, sans-serif;
    color: #fff;
    font-size: 16px;
    background-color: #fff;
*
    outline: 0 !important;
.container
    width: 1200px;
a, button, input
    outline: 0;
h2
    font-weight: 700;
.btn
    padding: 7px 50px;
    font-size: 15px;
    font-weight: 700;
    text-transform: uppercase;
    color: #fff;
    position: relative;
    &:hover, &:focus
        color: #fff;
.btn-default-1
    border: 2px solid #fff;
    text-transform: lowercase;
    &:hover
        background-color: #fff;
        color: blueBG;
.btn-default-2
    background-color: yellowBG;
    border: 2px solid yellowBG;
    &:hover
        background-color: orangeBG;
        border: 2px solid orangeBG;
.btn-default-3
    border: 2px solid #fff;
    &::before
        content: '';
        width: calc(100% - 100px);
        height: 0;
        position: absolute;
        top: 25px;
        display: inline-block;
        border-bottom: 1px dashed #fff;
    &:hover
        background-color: #fff;
        color: blueBG;
        &::before
            border-bottom: 1px dashed blueBG;
.btn-default-4
    border-radius: 0;
    background-color: blueBG2;
    &::before
        content: '';
        width: calc(100% - 100px);
        height: 0;
        position: absolute;
        top: 25px;
        display: inline-block;
        border-bottom: 1px solid #fff;
.btn-custom
    text-transform: none;
    text-decoration: none;
    position: relative;
    i
        display: inline-block;
        height: 25px;
        width: 20%;
        position: absolute;
        top: 5px;
        left: 10px;
    &::before
        content: '';
        width: calc(100% - 100px);
        height: 0;
        position: absolute;
        top: 25px;
        display: inline-block;
        border-bottom: 1px dashed #fff;
    &:hover
        color: lYellow;
        &::before
            border-bottom: 1px dashed lYellow;
.btn-lk
    background-color: blueBG2;
    border-radius: 0;
    float: right;
    padding: 5px 20px 5px 35px;
    font-size: 16px;
    text-transform: none;
    text-decoration: underline;
    &::before
        content: '';
        background-image: url('../img/lk_img_01.png');
        background-position: center;
        background-repeat: no-repeat;
        display: inline-block;
        height: 25px;
        width: 25px;
        position: absolute;
        left: 3px;
        bottom: 3px;
.col-md-6
    .btn-lk
        top: 50px;
.title
    font-size: 40px;
    font-weight: 700;
    line-height: 50px;
.titleh2
    margin-top: 25px;
    font-size: 50px !important;
    font-weight: 700 !important;
    line-height: 60px;
    text-transform: uppercase;
.bold
    font-weight: 700;
.light
    font-weight: 300 !important;
    text-transform: none;
.big
    font-size: calc(100%+20px);
    display: block;
h1
    text-align: center;
    font-size: 36px;
    font-weight: 700;
    line-height: 22px;
    margin-top: 70px;
.link
    text-align: right;
    font-weight: 700;
    position: absolute;
    right: 100px;
    text-decoration: underline;
    z-index: 99;
    + .link
        right: 0;
        &::before
            content: '';
            height: 26px;
            width: 1px;
            font-size: 24px;
.back-link
    &::before
        content: '‚Üê';
        display: inline-block;
        position: relative;
        left: -10px;
        font-size: 24px;
.v-text
    text-align: center;
    *
        display: inline-block;
        vertical-align: middle;
    &::before
        content: "";
        display: inline-block;
        min-height: inherit;
        height: 100%;
        vertical-align: middle;
.form-control.nake-input
    padding: 0;
    border: 0;
    background-color: transparent;
    box-shadow: none;
.form-control.drop-dl
    padding-left: 0;
    padding-right: 0;
    border: 0;
    background-color: transparent;
.min-input
    width: 5%;
.mid-input
    width: 7%;
.big-input
    width: 12%;
.hidden-desctop
    display: none;
