.types
    padding: 30px 0 60px;
    .title
        font-size: 36px;
        line-height: 32px;
    > div
        position: relative;
        margin: 30px 0 0;
        height: 270px;
        overflow: hidden;
        > div
            padding: 20px 30px;
            position: absolute;
            top: 0;
            width: 100%;
            height: 100%;
            padding-right: 15%;
            .content
                font-size: 13px;
                min-height: 115;
                max-height: 115px;
                overflow: hidden;
                p.title
                    font-size: 30px;
                    line-height: 34px;
                    font-weight: 300;
                    height: 70px;
                    overflow: hidden;
            a
                position: absolute;
                bottom: 15px;
