.wrp-services
    background-color: blueD;
    height: 700px;
    overflow: hidden;
    .container
        position: relative;
        height: inherit;
        i
            position: absolute;
            &.icon-bouble-bottom
                top: -5px;
                left: 375px;
            &.icon-bouble-top
                bottom: 0;
                left: 378px;
.services
    padding-top: 10px;
    position: relative;
    .titleh2
        font-size: 50px;
        line-height: 60px;
        color: #fff !important;
        span
            display: block;
            font-weight: bold;
    p
        font-size: 15px;
    .col-md-4
        padding-right: 90px;
        p
            color: blueL;
            max-height: 175px;
            overflow: hidden;
    .col-md-8
        padding-top: 80px;
        padding-left: 120px;
        .tab-content
            max-height: 560px;
            overflow: hidden;
            overflow-y: auto;
            .tab-pane
                > a
                    position: absolute;
                    bottom: -50px;
                    right: 0;
.elems
    list-style: none;
    padding: 0;
    margin: 30px 0 0;
    li
        margin-bottom: 30px;
        a
            position: relative;
            color: #fff;
            font-size: 34px;
            font-weight: 700;
            &:hover, &:focus, &:visited
                text-decoration: none;
                color: yellowBG;
            &::after
                content: '';
                display: inline-block;
                background-image: url('../img/sprite.png');
                background-repeat: no-repeat;
                width: 23px;
                height: 14px;
                background-position: -105px -451px;
                position: relative;
                top: -3px;
                left: 0px;
                opacity: 0;
                transition: opacity ease-out 0.3s, left ease-out 0.3s;
        &.active
            a
                color: yellowBG;
                &::after
                    content: '';
                    display: inline-block;
                    background-image: url('../img/sprite.png');
                    background-repeat: no-repeat;
                    width: 23px;
                    height: 14px;
                    background-position: -105px -451px;
                    position: relative;
                    top: -3px;
                    left: 15px;
                    opacity: 1;
.pilles
    height: 320px;
    margin-top: 75px;
    div
        position: relative;
        height: 60px;
        display: block;
        margin-bottom: 0px;
        background-color: yellowBG;
        width: 300px;
        position: absolute;
        bottom: 0;
        &:nth-child(1)
            transform: rotate(90deg);
            transform-origin: 0 0;
            margin-top: 130px;
            margin-left: 60px;
            bottom: 265px;
        &:nth-child(2)
            transform: rotate(90deg);
            transform-origin: 100px 25px;
            margin-top: 30px;
            margin-left: 90px;
            bottom: 190px;
        &:nth-child(3)
            margin-top: -18px;
            margin-left: 220px;
            transform: translateX(150px);
            transform: rotate(90deg);
            transform-origin: 150px 0px;
            bottom: 115px;
        &:nth-child(4)
            margin-top: -15px;
            transform: translateX(300px);
            transform: rotate(90deg);
            transform-origin: 223px 0;
            margin-top: 95px;
            margin-left: 285px;
            bottom: 42px;
        &:nth-child(5)
            transform: translateX(375px);
            transform: rotate(90deg);
            transform-origin: 295px 0;
            margin-left: 350px;
            margin-top: -185px;
            bottom: -30px;
        p
            display: inline-block;
            font-size: 20px;
            font-weight: 700;
            line-height: 70px;
            padding-left: 0px;
            transform: rotate(180deg);
            width: 450px;
            text-align: left;
            position: absolute;
            left: -180px;
            a
                color: #fff;
                text-decoration: underline;
                &:hover
                    color: #fff;
        i
            position: relative;
            left: -70px;
            top: -3px;
            transform: rotate(-90deg);
