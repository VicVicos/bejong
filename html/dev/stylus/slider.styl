.slider
    height: 485px;
    position: relative;
.slick-slide
    .slick-content
        width: 45%;
        display: inline-block;
        padding-top: 50px;
        vertical-align: top;
        z-index: 99;
        position: relative;
        p
            max-height: 202px;
            overflow: hidden;
            &.title
                max-height: 160px;
                overflow: hidden;
    .slick-img
        position: relative;
        z-index: 1;
        display: inline-block;
        width: 50%;
        > img
            display: inline-block;
            float: right;
            max-height: 450px;
            width: auto;
.slick-arrow
    height: 50px;
    width: 50px;
    background-color: transparent;
    border-radius: 4px;
    border: 2px solid #fff;
    position: absolute;
    top: 37%;
    z-index: 99;
    color: rgba(0, 0, 0, 0);
    background-image: url('../img/sprite.png');
    &.slick-prev
        left: -70px;
        background-position: -313px -385px;
    &.slick-next
        background-position: -264px -383px;
        right: -70px;
