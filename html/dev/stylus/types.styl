.types
    padding: 30px 0 60px;
    > div
        position: relative;
        margin: 30px 0 0;
        height: 270px;
        overflow: hidden;
        div
            padding: 30px 30px;
            position: absolute;
            top: 0;
            width: 100%;
            padding-right: 50%;
            p
                font-size: 14px;
                min-height: 76px;
                max-height: 83px;
                overflow: hidden;
                &.title
                    font-size: 30px;
                    line-height: 34px;
                    font-weight: 300;
                    height: 70px;
                    overflow: hidden;
